{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/langston-output.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "persona", "version", "confidence", "output", "notes", "warnings", "errors"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "partial", "error"]
    },
    "persona": {
      "type": "string",
      "const": "langston_l_model"
    },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "output": { "type": "object" },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "warnings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
